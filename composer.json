{
    "name": "dhii/simple-test-abstract",
    "description": "Base classes for SimpleTest",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Dhii Team",
            "email": "development@dhii.co"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php":  "^5.3.3 | ^7.0",
        "dhii/stats-abstract": "dev-develop",
        "dhii/collections-abstract": "dev-develop",
        "dhii/simple-test-interface": "dev-develop"
    },
    "require-dev": {
        "dhii/php-cs-fixer-config": "dev-php-5.3",
        "ptrofimov/xpmock": "^1.1",
        "codeclimate/php-test-reporter": "dev-master",
        "phpunit/phpunit": "4.*"
    },
    "autoload": {
        "psr-4": {
            "Dhii\\SimpleTest\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dhii\\SimpleTest\\Test\\Stub\\": "test/stub/"
        }
    }
}
